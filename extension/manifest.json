{
  "manifest_version": 3,
  "name": "Smart Job Tracker",
  "version": "1.0",
  "description": "Automatically track job applications",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.indeed.com/*",
        "*://*.naukri.com/*"
        ],

      "js": ["content.js"]
    }
  ]
}
